<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="76dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.tankery.lib.circularseekbar.CircularSeekBar
        android:id="@+id/cs1"
        app:cs_max = "720"
        android:layout_width="284dp"
        android:layout_height="243dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        app:cs_circle_color="@color/colorAccent"
        app:cs_circle_progress_color="@color/colorAccent"
        app:cs_circle_stroke_width="4dp"
        app:cs_circle_style="round"
        app:cs_disable_progress_glow="true"
        app:cs_negative_enabled="true"
        app:cs_pointer_color="@color/colorPrimary"
        app:cs_pointer_halo_border_width="0dp"
        app:cs_pointer_halo_width="0dp"
        app:cs_pointer_stroke_width="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <me.tankery.lib.circularseekbar.CircularSeekBar
        android:id="@+id/cs2"
        app:cs_max = "720"
        android:layout_width="284dp"
        android:layout_height="243dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="klik"
        app:cs_circle_color="@color/colorAccent"
        app:cs_circle_progress_color="@color/colorAccent"
        app:cs_circle_stroke_width="4dp"
        app:cs_circle_style="square"
        app:cs_disable_progress_glow="true"
        app:cs_negative_enabled="true"
        app:cs_pointer_halo_border_width="0dp"
        app:cs_pointer_halo_width="0dp"
        app:cs_pointer_stroke_width="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/TZdd"
        android:layout_width="255dp"
        android:layout_height="33dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="98dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cs1" />

</androidx.constraintlayout.widget.ConstraintLayout>